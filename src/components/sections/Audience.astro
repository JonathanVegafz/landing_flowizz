  }

  .audience-cta {
    text-align: center;
  }

  .cta-box {
    background: rgba(26, 21, 48, 0.9);
    backdrop-filter: blur(15px);
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    max-width: 600px;
    margin: 0 auto;
    box-shadow: var(--shadow-xl);
    position: relative;
